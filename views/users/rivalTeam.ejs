<link rel="stylesheet" href="../css/style.css"/>
<h2>Team <%=rivalName.teamName%></h2>
<%userSquad.forEach(player => { %>
    <div>
        <h2><%= player.firstName %> <%= player.lastName %></h2>
        <p><%= player.team%></p>
        <p>Position: <%= player.position%></p>
    </div>
 <% }) %>

 <div class="comment-section">
     <!-- this is where comments go -->
     <%comments.forEach(comment => { %>
        <div>
            <h4><%= comment.content %> </h4>
            <p> -Team <%= comment.name%></p>
        </div>
     <% }) %>
     <!-- form to add new comment -->
     <div>
        <form method="POST" action="/users/<%=rivalId%>/comment">
            
            <div class="mb-3 mt-3">
                <label for="content" class="form-label">Talk Some Shit:</label>
                <input id="content" class="form-control" type="text" name="content" placeholder="enter comment here" />
            </div>
    
            <div class="mb-3">
                <label for ="name" class="form-label">Enter Your Team Name Here:</label>
                <input id="name" class="form-control" type="text" name="name" placeholder="enter name here" />
            </div>
    
            <button type="submit" class="btn btn-primary">Post Your Comment!</button>
         </form>
     </div>
 </div>

 
 <a href="/users/">Back to Squad List</a>
 